<AlarmWidget>:

    orientation: "vertical"

    FloatLayout:
        size_hint: 1, .075

        MDLabel:

            id: labelId
            pos_hint: {"x" : .02, "y" : .0}
            font_size: self.height/1.5
            text: "Alarms"
            halign: "left"

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, .85

    FloatLayout:
        size_hint: 1, .075

        Button:
            text: "+"
            size_hint: .1, 1
            pos_hint: {"x" : .45, "y" : 0}
            on_press: root.open_add_alarm_window()


