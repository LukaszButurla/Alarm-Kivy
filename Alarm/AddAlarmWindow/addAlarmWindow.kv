<AddAlarmWindow>:

    title: "Create Alarm"

    BoxLayout:
        orientation: "vertical"

        FloatLayout:
            size_hint: 1, .1
            pos_hint: {"x": 0, "y": .5}

            Button:
                id: btnAddHourId
                text: "+"
                size_hint: .15, .7
                pos_hint: {"x" : .27, "y": .05}
                on_press: root.add("hour")

            Button:
                id: btnAddMinuteId
                text: "+"
                size_hint: .15, .7
                pos_hint: {"x" : .58, "y" : .05}
                on_press: root.add("minute")

        FloatLayout:
            size_hint: 1, .2


            MDLabel:
                id: timerLabel
                text: root.selectedTime
                halign: "center"
                size_hint: 1, 1
                font_size: self.height/1.2
                pos_hint: {"x" : 0, "y" : 0}

        FloatLayout:
            size_hint: 1, .1
            pos_hint: {"x": 0, "y": .33}

            Button:
                id: btnMinusHourId
                text: "-"
                size_hint: .15, .7
                pos_hint: {"x" : .27, "y": .25}
                on_press: root.minus("hour")

            Button:
                id: btnMinusMinuteId
                text: "-"
                size_hint: .15, .7
                pos_hint: {"x" : .58, "y": .25}
                on_press: root.minus("minute")

        FloatLayout:
            


