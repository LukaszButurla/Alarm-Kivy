<TimepieceWidget>:
    
    FloatLayout:
        size_hint: 1, .2
        pos_hint: {"x": 0, "y": .5}

        Button:
            id: btnAddHourId
            text: "+"
            size_hint: .15, .2
            pos_hint: {"x" : .2, "y": .22}
            on_press: root.add("hour")

        Button:
            id: btnAddMinuteId
            text: "+"
            size_hint: .15, .2
            pos_hint: {"x" : .42, "y": .22}
            on_press: root.add("minute")

        Button:
            id: btnAddSecondId
            text: "+"
            size_hint: .15, .2
            pos_hint: {"x" : .64, "y": .22}
            on_press: root.add("second")

    MDLabel:
        id: timerLabel
        text: "00:00.00"
        halign: "center"
        size_hint: 1, .1
        font_size: self.height/1.2
        pos_hint: {"x" : 0, "y" : .45}

    FloatLayout:
        size_hint: 1, .2
        pos_hint: {"x": 0, "y": .33}

        Button:
            id: btnMinusHourId
            text: "-"
            size_hint: .15, .2
            pos_hint: {"x" : .2, "y": .4}
            on_press: root.minus("hour")

        Button:
            id: btnMinusMinuteId
            text: "-"
            size_hint: .15, .2
            pos_hint: {"x" : .42, "y": .4}
            on_press: root.minus("minute")

        Button:
            id: btnMinusSecondId
            text: "-"
            size_hint: .15, .2
            pos_hint: {"x" : .64, "y": .4}
            on_press: root.minus("second")